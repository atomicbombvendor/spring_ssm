<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.company.ssm.dao.UsersDao">
    <!--           name                model-->
    <resultMap id="UsersBaseDaoTst" type="com.company.ssm.model.Users">
        <!--主键  字段名 类属性名   JdbcType应该和JavaType对应-->
        <id column="userId" property="userId" jdbcType="BIGINT"/>
        <result column="userName" property="userName" jdbcType="VARCHAR"/>
        <result column="user_psd" property="userPsd" jdbcType="VARCHAR"/>
        <result column="regtime" property="regTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="getAllUsers" resultMap="UsersBaseDaoTst">
        SELECT * FROM USERS
    </select>

    <select id="getUser" resultType="map"> <!-- ResultType -> map || ResultMap -> class -->
        SELECT user_id, user_name, user_psd, regtime FROM USERS WHERE user_name = #{userName} AND user_psd = #{userPsd};
    </select>

    <select id="getUserById" resultMap="UsersBaseDaoTst">
        SELECT * FROM USERS WHERE user_id = #{uId};
    </select>

</mapper>
