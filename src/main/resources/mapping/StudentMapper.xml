<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.company.ssm.dao.StudentDao">
    <resultMap id="StudentBaseDao" type="com.company.ssm.model.Student">
        <id column="id" property="sid" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getStudentById" resultMap="StudentBaseDao">
      SELECT * FROM STUDENTS WHERE ID= #{id}
    </select>

    <select id="getStudentByName" resultMap="StudentBaseDao">
        SELECT * FROM STUDENTS WHERE NAME = #{name}
    </select>

    <select id="getAllStudent" resultMap="StudentBaseDao">
        SELECT * FROM STUDENTS
    </select>
</mapper>
