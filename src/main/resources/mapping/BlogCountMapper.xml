<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.company.ssm.dao.BlogCountDao">

    <resultMap id="BlogCountBaseMap" type="com.company.ssm.model.BlogCount">
        <id column="tid" property="tid" jdbcType="BIGINT"/>
        <result column="read_count" property="readCount" jdbcType="BIGINT"/>
        <result column="upvote" property="upVote" jdbcType="BIGINT"/>
    </resultMap>

    <select id="getAllBlogCount" resultMap="BlogCountBaseMap">
        SELECT * FROM DB_SSM.BLOG_COUNT
    </select>

</mapper>